import React from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Book, FlaskConical, Atom, BarChart, Scale, Microscope, PenTool } from 'lucide-react';

const iconMap = {
    Physics: Atom,
    Chemistry: FlaskConical,
    Mathematics: BarChart,
    Biology: Microscope,
    English: PenTool,
    Commerce: Scale,
    default: Book
};

export default function SubjectCard({ subject }) {
    const Icon = iconMap[subject.name] || iconMap.default;

    return (
        <Card className="h-full shadow-lg border-0 bg-white/60 backdrop-blur-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
            <CardHeader>
                <div className="flex items-center gap-4">
                    <div className="p-3 rounded-lg bg-blue-100">
                        <Icon className="w-6 h-6 text-primary-blue" />
                    </div>
                    <div>
                        <CardTitle className="text-lg font-bold text-text-primary">{subject.name}</CardTitle>
                        <Badge variant="outline" className="mt-1">{subject.exam_type.replace('_', ' ')}</Badge>
                    </div>
                </div>
            </CardHeader>
            <CardContent>
                <p className="text-sm text-text-secondary h-14 line-clamp-3">{subject.description}</p>
            </CardContent>
        </Card>
    );
}
